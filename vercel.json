{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/combined-notifications",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/facebook-rate-monitor",
      "schedule": "0 9 * * *"
    }
  ]
}
