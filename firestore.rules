rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User profiles - users can only access their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Electricity rates - users can only access their own rates
    match /users/{userId}/electricity_rates/{rateId} {
      allow read, write: if isOwner(userId);
    }

    // Appliances - users can only access their own appliances
    match /users/{userId}/appliances/{applianceId} {
      allow read, write: if isOwner(userId);
    }

    // Usage records - users can only access their own records
    match /users/{userId}/usage_records/{recordId} {
      allow read, write: if isOwner(userId);
    }

    // Budgets - users can only access their own budgets
    match /users/{userId}/budgets/{budgetId} {
      allow read, write: if isOwner(userId);
    }
  }
}
